# Application Environment
FLASK_ENV=production                      # Options: development, production

# Security
APP_SECRET_KEY=change-this-in-production  # Secret key for sessions and CSRF protection

# Database Configuration
DATABASE_URI=sqlite:///linkshrink.db      # Database connection string
DB_DIRECTORY=app/data                     # Directory to store database files
DB_FILENAME=urls.sqlite                   # SQLite database filename

# Cookie Configuration
TOKEN_COOKIE_NAME=identifier              # Name of the cookie used to store session tokens

# URL Settings
MAX_URL_LENGTH=2000                       # Maximum length for original URLs
DEFAULT_EXPIRATION_DAYS=30                # Default number of days before URLs expire

# Production Settings
PROXY_COUNT=0                             # Number of proxies in front of the application
SSL_REDIRECT=False                        # Whether to redirect HTTP to HTTPS

# Maintenance Settings
EXPIRE_LINKS_CHECK_TIME_SEC=60            # How often to check for expired links (seconds)
EXPIRE_LINKS_TIME_SEC=60                  # Time between link expiration runs (seconds)

# Logging
LOGS_DIRECTORY=logs                       # Directory for log files
LOG_LEVEL=DEBUG                           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
